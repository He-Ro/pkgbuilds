pkgname=('electrum')
srcname='electrum'
pkgdesc='Bitcoin thin client'
pkgver='2.4.3'
pkgrel='1'
arch=('any')
url="https://github.com/spesmilo/${srcname}"
license=('GPL3')

depends=(
    'python2'
    'python2-ecdsa'
    'python2-pbkdf2'
    'python2-requests'
    'python2-pyasn1'
    'python2-pyasn1-modules'
    'python2-qrcode'
    'python2-protobuf'
    'python2-tlslite'
    'python2-dnspython'
    'python2-pyqt4'
    'python2-sip'
    'python2-slowaes'
)
optdepends=(
    'python2-btchip: BTChip hardware wallet support'
    'python2-matplotlib: plot transaction history in graphical mode'
    'zbar: QR code reading support'
)
makedepends=(
    'git'
    'gettext'
    'python2-pycurl'
    'python2-setuptools'
    'desktop-file-utils'
)
provides=("${pkgname[0]%-git}")
conflicts=("${pkgname[0]%-git}")

source=("${srcname}::git+https://github.com/spesmilo/${srcname}.git")
sha512sums=('SKIP')

install='electrum.install'

prepare() {
    cd "${srcdir}/${srcname}"

    find . -type f -exec sed -i 's#/usr/bin/python#/usr/bin/python2#g' '{}' '+'
    find . -type f -exec sed -i 's#/usr/bin/env python#/usr/bin/env python2#g' '{}' '+'
}

build() {
    cd "${srcdir}/${srcname}"

    pyrcc4 icons.qrc -o gui/qt/icons_rc.py
    python2 setup.py build
}

package() {
    cd "${srcdir}/${srcname}"

    python2 setup.py install --root="${pkgdir}" --optimize=1
}
