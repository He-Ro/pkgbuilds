pkgname=('python-texttable')
srcname='texttable'
pkgver='0.8.3'
pkgrel='1'
pkgdesc='For easy printing of ascii tables within Python'
arch=('any')
url='http://foutaise.org/code/'
license=('GPL2')

depends=('python')
makedepends=('python-setuptools')
provides=('python-texttable')
conflicts=('python-texttable')

source=("https://pypi.python.org/packages/source/t/texttable/texttable-${pkgver}.tar.gz")
md5sums=('dc31d62f5e3fb095d14f3c673d22b339')

package() {
    cd "${srcdir}/${srcname}-${pkgver}"

    python setup.py install --root="${pkgdir}" --optimize=1
}
