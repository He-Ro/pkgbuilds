pkgname=('rust-git')
srcname='rust'
pkgver='1'
pkgrel='1'
pkgdesc='A safe, concurrent, practical language'
arch=('i686' 'x86_64')
url='https://github.com/rust-lang/rust'
license=('MIT' 'Apache')

makedepends=('git' 'gcc' 'python2' 'make' 'curl')
provides=('rust')
conflicts=('rust')

source=("${srcname}::git+https://github.com/rust-lang/rust.git#tag=1.0.0-beta")
sha512sums=('SKIP')

pkgver() {
    cd "${srcdir}/${srcname}"

    printf 'r%s.%s\n' \
        "$( git rev-list HEAD | wc --lines )" \
        "$( git describe --always | sed 's/-/./g' )"
}

build() {
    cd "${srcdir}/${srcname}"

    ./configure --prefix='/usr' --enable-optimize --disable-debug --disable-docs --disable-verify-install

    make
}

package() {
    cd "${srcdir}/${srcname}"

    make DESTDIR="${pkgdir}" install
    rm "${pkgdir}/usr/lib/rustlib/"{components,install.log,manifest-rustc,rust-installer-version,uninstall.sh}
}
