pkgname=('wtftw-git')
srcname='wtftw'
pkgver='r1'
pkgrel='1'
pkgdesc='Window Tiling For The Win. A tiling window manager written in Rust'
arch=('i686' 'x86_64')
url='https://github.com/Kintaro/wtftw'
license=('custom:BSD')

depends=('rust' 'libxinerama')
makedepends=('git' 'cargo')
provides=('wtftw')
conflicts=('wtftw')

source=("${srcname}::git+https://github.com/Kintaro/wtftw.git")
sha512sums=('SKIP')

pkgver() {
    cd "${srcdir}/${srcname}"

    printf 'r%s.%s\n' \
        "$( git rev-list HEAD | wc --lines )" \
        "$( git describe --always | sed 's/-/./g' )"
}

prepare() {
    mkdir "${srcdir}/cargo"
}

build() {
    cd "${srcdir}/${srcname}"

    export CARGO_HOME="${srcdir}/cargo"
    cargo build --release
}

package() {
    export CARGO_HOME="${srcdir}/cargo"
    cargo install --path "${srcdir}/${srcname}" --root "${pkgdir}"
}
