pkgname=('retroarch')
srcname='retroarch'
pkgdesc='Reference frontend for the libretro API'
pkgver='1.0.0.3'
_gittag="${pkgver}-beta"
pkgrel='1'
arch=('i686' 'x86_64')
url='https://github.com/libretro/RetroArch'
license=('GPL3')

depends=('libgl' 'alsa-lib' 'freetype2' 'libxml2')
makedepends=('git')
provides=('retroarch')
conflicts=('retroarch')

source=("${srcname}::git+https://github.com/libretro/RetroArch.git#tag=${_gittag}")
sha512sums=('SKIP')

prepare() {
    cd "${srcdir}/${srcname}"

    ./configure --prefix='/usr'
}

build() {
    cd "${srcdir}/${srcname}"

    make
}

package() {
    cd "${srcdir}/${srcname}"

    make DESTDIR="${pkgdir}" install
}
