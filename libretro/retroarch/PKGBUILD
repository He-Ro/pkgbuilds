pkgname=('retroarch')
srcname='retroarch'
pkgdesc='Reference frontend for the libretro API'
pkgver='1.2'
pkgrel='1'
arch=('i686' 'x86_64')
url='https://github.com/libretro/RetroArch'
license=('GPL3')

depends=('libgl' 'alsa-lib' 'freetype2' 'libxml2' 'nvidia-cg-toolkit')
makedepends=('git')
provides=('retroarch')
conflicts=('retroarch')

source=("${srcname}::git+https://github.com/libretro/RetroArch.git#tag=v${pkgver}")
sha512sums=('SKIP')

prepare() {
    cd "${srcdir}/${srcname}"

    ./configure --prefix='/usr'
}

build() {
    cd "${srcdir}/${srcname}"

    make
}

package() {
    cd "${srcdir}/${srcname}"

    make DESTDIR="${pkgdir}" install

    install --mode='755' --target-directory="${pkgdir}/usr/bin" tools/retroarch-joyconfig
}
