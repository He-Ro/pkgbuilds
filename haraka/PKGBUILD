pkgname=('haraka')
srcname='Haraka'
pkgver='2.6.1'
pkgrel='1'
pkgdesc='Event driven SMTP server'
arch=('i686' 'x86_64')
url='https://github.com/baudehlo/Haraka'
license=('MIT')

depends=('nodejs')
makedepends=('python2' 'gcc' 'make' 'npm')
provides=('haraka')
conflicts=('haraka')

package() {
    npm config set python python2
    npm install --user root -g --prefix "${pkgdir}/usr" "${srcname}@${pkgver}"
}
